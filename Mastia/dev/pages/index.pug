  body
    +header
    include ../bem/slider/slider
    .layout.service
      .layout
        .layout_section
          +service(2,3)
    .layout
      .layout_section
        .project
          h2.h2 Recent Projects
          .project_inner
            +project(1,3)
            .project_button
              button.button_page.button_page__active 
                i.fa.fa-angle-left
              button.button_page.button_page__active 
                i.fa.fa-angle-right
    .layout.clients-wrap._scrollTo
      .layout_section
        +clients
    .layout
      .layout_section
          section.blog_home
            h2.h2 From Blog
            +blog_home
    +footer
    script.
      $(document).ready(function(){
      $('.project_inner img').addClass('project_photo__modifier');
      });